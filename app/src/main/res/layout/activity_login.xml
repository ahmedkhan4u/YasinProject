<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@android:color/white"
        android:hint="الاسم الكامل"
        android:textColor="@color/light_blue"
        android:textColorHint="@color/light_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        android:layoutDirection="rtl"
        tools:layout_editor_absoluteX="24dp"
        android:fontFamily="@font/arabic_light"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:inputType="text"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/white"
        android:hint="كلمة السر"
        android:textColor="@color/light_blue"
        android:textColorHint="@color/light_blue"
        app:layout_constraintTop_toBottomOf="@+id/editText3"
        android:fontFamily="@font/arabic_light"
        android:textDirection="rtl"
        tools:layout_editor_absoluteX="24dp"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:inputType="text"
        android:maxLines="1"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_orange"
        android:fontFamily="@font/arabic_bold"
        android:onClick="GotoBarCodeClick"
        android:text="تسجيل الدخول"
        android:textStyle="bold"

        style="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.039"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="هل نسيت كلمة السر؟"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:fontFamily="@font/arabic_bold"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_grey_min_round"
        android:drawableEnd="@drawable/ic_add_description"
        android:drawableTint="@color/colorPrimaryDark"
        android:fontFamily="@font/arabic_bold"
        android:paddingStart="40dp"
        android:paddingEnd="26dp"
        android:text="انشاء حساب"
        android:onClick="GotoRegisterClick"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.786"
        tools:layout_editor_absoluteX="48dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_grey_min_round"
        android:drawableEnd="@drawable/ic_finger_print_dark"
        android:drawableTint="@color/colorPrimaryDark"
        android:fontFamily="@font/arabic_bold"
        android:paddingStart="40dp"
        android:paddingEnd="32dp"
        android:text="تسجيل باستعمال البصمة"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        tools:layout_editor_absoluteX="48dp"
        android:onClick="ButonClick"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
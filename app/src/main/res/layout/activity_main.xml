<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:padding="16dp"
            >

            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:background="@drawable/light_circle_bg"
                >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_back_ripple"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:paddingStart="6dp"
                    android:tint="@color/colorPrimaryDark"
                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:layout_weight="3"
            android:background="@drawable/all_corners_round_layout"
            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="88dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/profile_image"

                android:id="@+id/img_profile"
                />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عصام غیون  : اسلے الجنان"
                android:layout_toStartOf="@id/img_profile"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/arabic_bold"
                android:textSize="14sp"

                android:id="@+id/txt_name"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ملومات الاختیہ  : اسلے الجنان"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:layout_toStartOf="@id/img_profile"
                android:layout_marginHorizontal="8dp"
                android:id="@+id/txt_address"
                android:layout_below="@+id/txt_name"
                android:fontFamily="@font/arabic_bold"

                />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:layout_below="@id/txt_address"
                android:layout_marginTop="48dp"
                android:background="@drawable/view_color"
                android:id="@+id/top_view"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ملومات الاختن:"
                android:fontFamily="@font/arabic_bold"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:id="@+id/txt_top_3"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="18dp"
                android:layout_alignParentEnd="true"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/btn_orange"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@id/txt_top_3"
                android:text="ملومات الاختن"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/arabic_light"
                android:textStyle="bold"
                android:textSize="14sp"
                android:onClick="NewActivityClick"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bottom_corners_round_bg"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="8dp"
                android:layout_marginVertical="6dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ملومات الاختن:"
                    android:gravity="center"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/arabic_light"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ملومات الاختن:"
                    android:gravity="center"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/arabic_light"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ملومات الاختن:"
                    android:gravity="center"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/arabic_light"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:onClick="ButonClick"
                android:orientation="horizontal"
                android:padding="8dp"
                android:foreground="@drawable/custom_ripple"
                android:clickable="true"
                android:weightSum="3">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/top_view"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@id/txt_top_3"
                    android:layout_weight="1"
                    android:background="@drawable/btn_red_color"
                    android:fontFamily="@font/arabic_light"
                    android:text="ملومات الاختن"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/arabic_bold"
                    android:gravity="center"
                    android:text="ملومات الاختن:"
                    android:textSize="12sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/arabic_bold"
                    android:gravity="center"
                    android:text="ملومات الاختن:"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="8dp"
                android:id="@+id/layout2"
                android:onClick="ButonClick"
                android:foreground="@drawable/custom_ripple"
                android:clickable="true"
                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/btn_green_color"
                    android:clickable="true"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_more_horiz_24"
                        app:tint="@android:color/white"
                        android:layout_marginStart="8dp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:layout_centerInParent="true"
                        android:layout_marginVertical="4dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="الاختن"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/arabic_light"
                        android:textSize="12sp"
                        />

                </RelativeLayout>


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ملومات الاختن:"
                    android:gravity="center"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/arabic_bold"
                    android:textSize="12sp"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1334 455 -2455"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/arabic_bold"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="8dp"
                android:id="@+id/layout3"
                android:onClick="ButonClick"
                android:foreground="@drawable/custom_ripple"
                android:clickable="true"
                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/btn_green_color"
                    android:clickable="true"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_more_horiz_24"
                        app:tint="@android:color/white"
                        android:layout_marginStart="8dp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:layout_centerInParent="true"
                        android:layout_marginVertical="4dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="الاختن"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:fontFamily="@font/arabic_light"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        />

                </RelativeLayout>


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ملومات الاختن:"
                    android:gravity="center"
                    android:fontFamily="@font/arabic_bold"
                    android:textSize="12sp"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1334 455 -2455"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/arabic_bold"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="8dp"
                android:id="@+id/layout4"
                android:onClick="ButonClick"
                android:foreground="@drawable/custom_ripple"
                android:clickable="true"
                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:background="@drawable/btn_green_color"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_more_horiz_24"
                        app:tint="@android:color/white"
                        android:layout_marginStart="8dp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:layout_centerInParent="true"
                        android:layout_marginVertical="4dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="الاختن"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:fontFamily="@font/arabic_light"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        />

                </RelativeLayout>


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ملومات الاختن:"
                    android:gravity="center"
                    android:fontFamily="@font/arabic_bold"
                    android:textSize="12sp"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1334 425 -2455"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/arabic_bold"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_grey"
            android:layout_marginHorizontal="32dp"
            android:text="ملومات الاختیہ"
            android:textColor="@color/colorPrimaryDark"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawableEnd="@drawable/ic_printer"
            android:paddingEnd="32dp"
            android:paddingStart="40dp"
            android:fontFamily="@font/arabic_bold"
            android:textSize="18sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_grey"
            android:layout_marginHorizontal="32dp"
            android:text="ملومات الاختیہ"
            android:textColor="@color/colorPrimaryDark"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawableEnd="@drawable/ic_save"
            android:paddingEnd="32dp"
            android:paddingStart="40dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/arabic_bold"
            android:textSize="18sp"
            />

    </LinearLayout>

</RelativeLayout>